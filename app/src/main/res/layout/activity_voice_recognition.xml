<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceRecognitionActivity">

    <ProgressBar
        android:id="@+id/progress1"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"></ProgressBar>


    <TextView
        android:id="@+id/textview1"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"></TextView>


    <ToggleButton
        android:id="@+id/toggle1"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"></ToggleButton>

<Button
    android:id="@+id/btngo"
    android:text="go To Speech"
    android:layout_width="wrap_content"
    android:layout_height="50dp"></Button>

  </LinearLayout>