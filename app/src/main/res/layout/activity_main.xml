<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FF031426"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="0.5"
    android:layout_height="0dp">

<android.support.v7.widget.CardView

    app:cardCornerRadius="40dp"
    android:layout_width="80dp"
    android:layout_height="80dp">
   <RelativeLayout
       android:gravity="center"
       android:background="@drawable/back"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   <ImageView
       android:layout_centerVertical="true"
       android:layout_centerHorizontal="true"
       android:id="@+id/rel3"
       android:layout_width="90dp"
       android:layout_height="90dp"
      android:src="@drawable/pointer"></ImageView>




   <RelativeLayout
       android:layout_centerVertical="true"
       android:id="@+id/rel1"
       android:layout_width="15dp"
       android:layout_height="15dp">

      <ImageView
          android:elevation="2dp"
          android:src="@drawable/num"
          android:layout_centerHorizontal="true"
          android:layout_width="5dp"
          android:layout_height="5dp"
          android:layout_centerVertical="true"
          android:layout_marginTop="0dp" />

      <ImageView
          android:id="@+id/imgabi"
          android:src="@drawable/numbig"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:layout_width="15dp"
          android:layout_height="15dp" />


   </RelativeLayout>

   <RelativeLayout
       android:layout_centerHorizontal="true"
       android:id="@+id/rel2"
       android:layout_width="15dp"
       android:layout_height="15dp">

      <ImageView
          android:elevation="2dp"
          android:src="@drawable/num2"
          android:layout_centerHorizontal="true"
          android:layout_width="5dp"
          android:layout_height="5dp"
          android:layout_centerVertical="true"
          android:layout_marginTop="0dp" />

      <ImageView
          android:id="@+id/imgpink"
          android:src="@drawable/numbig2"
          android:layout_centerVertical="true"
          android:layout_centerHorizontal="true"
          android:layout_width="15dp"
          android:layout_height="15dp" />


   </RelativeLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>
<Button
    android:textStyle="bold"
    android:id="@+id/btnpdf"
    android:layout_marginTop="50dp"
    android:textColor="#ffff"
    android:text="PDF"
    android:background="@color/colorAccent"
    android:layout_width="200dp"
    android:layout_height="60dp" />
</LinearLayout>
   <it.beppi.knoblibrary.Knob
       android:id="@+id/knob"
       app:kBalloonValuesArray="@drawable/bbb"
       app:kBorderColor="#A5A5A3"
       android:layout_width="196dp"
       android:layout_height="196dp"
       android:layout_centerVertical="true"
       android:outlineSpotShadowColor="#4CAF50"
     app:kKnobColor="#D3D3D3"
       app:kIndicatorColor="#ffff"
       app:kSelectedStateMarkerColor="#FF9800"
       app:kStateMarkersColor="#11FD1B"
       app:kStateMarkersWidth="2dp"
       app:kKnobCenterColor="#000000"
app:kKnobDrawable="@drawable/hh"
app:kAnimationBounciness="20"
       app:kAnimationSpeed="10"
       app:kBalloonValuesAnimation="fade"
       app:kBalloonValuesRelativePosition="0.25"
       app:kBorderWidth="0dp"
       app:kCircularIndicatorColor="#12FF1B"
       app:kCircularIndicatorRelativePosition="0.55"
       app:kCircularIndicatorRelativeRadius="0.03"
       app:kDefaultState="10"
       app:kFreeRotation="false"
       app:kIndicatorWidth="0dp"
       app:kKnobDrawableRotates="false"
       app:kMaxAngle="120"
       app:kMinAngle="-120"

       android:layout_marginTop="15dp"
       app:kNumberOfStates="30" />

</LinearLayout>