<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:startColor="#ffff"
                android:endColor="#F1EFEF"
                android:type="linear" />
            <size android:width="90dp"
                android:height="90dp"/>
            <corners android:radius="90dp"></corners>
        </shape>
    </item>

    <item
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp">
        <shape android:shape="rectangle" >
            <gradient android:startColor="#FFFFFF"   android:type="linear" android:endColor="#EDEEEE" android:gradientRadius="500dp" android:useLevel="false" android:angle="0"></gradient>
            <corners android:radius="90dp"></corners>
        </shape>
    </item>

</layer-list>